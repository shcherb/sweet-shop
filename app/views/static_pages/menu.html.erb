<div class="wrap">
  <div class="menu_list">
    <div class="section group">
      <% Category.all.each do |category_item| %>
        <div class="col_1_of_4 span_1_of_4">
          <h3><%= category_item.name %></h3>
          <%= image_tag(category_item.image_url) %>
          <ul>
            <% Product.where(category_id: category_item.id).each do |product_item| %>
              <li>
                <a href="#">
                  <span class="item_name"><%= product_item.title %></span>
                  <span class="price"><%= number_to_currency(product_item.price, locale: :ukr) %></span>
                </a>
                <%= button_to 'Add to cart', orders_path(product_id: product_item.id), action: "create", class: "button_to" %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
